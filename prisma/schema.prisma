// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique 
  password  String
  createdAt DateTime @default(now())
  
  // Relations
  participants Participant[]

  // --- AI Analysis Data ---
  aiMemory     Json?
  
  // --- NEW: Single JSON Log for History ---
  // Stores array: [{ event: "CLICK", page: "/home", time: "..." }, ...]
  activityLogs Json?   
}

// (Deleted UserActivity Model)

// --- DEBATE MODELS (Unchanged) ---

model Round {
  id        String      @id @default(uuid())
  topic     String
  status    String      @default("ACTIVE")
  userSide  String      @default("For")
  mode      String      @default("GENERAL")
  scorecard Json?
  createdAt DateTime    @default(now())
  arguments Argument[]
  participants Participant[]
}

model Participant {
  id        String      @id @default(uuid())
  role      String      @default("DEBATER")
  
  userId    String?     
  user      User?       @relation(fields: [userId], references: [id])
  
  roundId   String?
  round     Round?      @relation(fields: [roundId], references: [id])
  
  createdAt DateTime    @default(now())
  arguments Argument[]
}

model Argument {
  id               String      @id @default(uuid())
  contentEncrypted String
  iv               String
  aiAnalysis       Json?
  roundId          String
  round            Round       @relation(fields: [roundId], references: [id])
  participantId    String
  participant      Participant @relation(fields: [participantId], references: [id])
  createdAt        DateTime    @default(now())
}